{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true
  },
  "include": [
    "env.d.ts",
    "./.vitepress/theme/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules/"
  ]
}
